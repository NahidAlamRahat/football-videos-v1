<resources xmlns:tools="http://schemas.android.com/tools">



    <!-- Base application theme. -->
    <style name="ThemeHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>

        <item name="android:windowFullscreen">false </item>


    </style>





    <!-- Video Player Theme -->
    <style name="ThemeVideoPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->


        <item name="android:windowFullscreen">false </item>

        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>








</resources>
